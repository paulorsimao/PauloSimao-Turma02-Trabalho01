{
  "name": "projeto-integrador-ia",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:back": "turbo run dev --filter=backend...",
    "dev:front": "turbo run dev --filter=frontend...",
    "lint": "turbo lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/leaflet": "^1.9.12",
    "leaflet": "^1.9.4",
    "react-leaflet": "^4.2.1"
  }
}
